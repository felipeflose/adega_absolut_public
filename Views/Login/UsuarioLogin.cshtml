@model AppWeb.Models.UsuarioViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="row">
        <div class="col-md-4">
            <form asp-action="UsuarioLogin">
                <h2>Login</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Login" class="
    "></label>
                    <input asp-for="Login" class="form-control" />
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Senha" class="control-label"></label>
                    <input type="password" asp-for="Senha" class="form-control" />
                                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Login" class="btn btn-default btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div asp-validation-summary="All" class="error"></div>
    <br />
    <h2>@ViewData["Message"]</h2>


