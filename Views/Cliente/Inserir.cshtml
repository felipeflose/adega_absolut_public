@model AppWeb.Models.ClienteViewModel
@{
    ViewData["Title"] = "Adicionar volumes no cliente";
}
<h2 class="text-center">Adicionar novo cliente</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Cliente" asp-action="Salvar" method="POST">

            <input type="hidden" asp-for="IdCliente" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome Completo</label>
                <input type="text" asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>


            </div>

            <div class="form-group">

                <label asp-for="Cpf"class="control-label">CPF</label>
                <input id="txtCpf" type="text" asp-for="Cpf" class="form-control" data-mask="000.000.000-00" data-mask-reverser="false"
                />
                <span asp-validation-for="Cpf" class="text-danger" ></span>
            </div>


            <div class="form-group">

                <label asp-for="dtNasc" class="control-label">Data de nascimento</label>
                <input type="date" asp-for="dtNasc" class="form-control" data-mask="0000-00-00" data-mask-reverser="false" />
                <span asp-validation-for="dtNasc" class="text-danger"></span>
            </div>

            <div class="form-group">

                <label asp-for="Telefone" class="control-label">Celular</label>
                <input type="text" id="campoTelefone" asp-for="Telefone" class="form-control" data-mask="(00) 0 0000-0000" data-mask-reverser="false"/>
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>

            <div class="form-group">

                <label asp-for="CEP" class="control-label">CEP</label>
                <input type="text" asp-for="CEP" class="form-control" data-mask="00000-000" data-mask-reverser="false" />
                <span asp-validation-for="CEP" class="text-danger"></span>
            </div>

            <div class="form-group">

                <label asp-for="numCasa" class="control-label">N° da residencia</label>
                <input type="text" asp-for="numCasa" class="form-control" />
                <span asp-validation-for="numCasa" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>

        </form>
    </div>   <!--Fim formulário -->
    </div>





