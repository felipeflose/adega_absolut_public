@model AppWeb.Models.ProdutoViewModel
@{
    ViewData["Title"] = "Criar produtos";
}
<h2 class="text-center">Criar Produtos</h2> 
<hr />
<div class="row">
   <div class="col-md-4">
        <form asp-action="Salvar" for="insert" >
               <input type = "hidden" asp-for = "IdProduto" />
             <div asp-validation-summary="ModelOnly" class="text-danger"></div>

             <div class="form-group">

                    <label asp-for="nome_produto" class="control-label">Nome do Produto</label>
                    <input type="text" asp-for="nome_produto" class="form-control" />
                    <span asp-validation-for="nome_produto" class="text-danger"></span>
             </div>

             <div class="form-group">

                  <label asp-for="valor" class="control-label">Valor produto</label>
                  <input type="text" asp-for="valor" class="form-control"/>
                  <span asp-validation-for="valor" class="text-danger"></span>
              </div>

              <div class="form-group">

                  <label asp-for="marca" class="control-label">Marca</label>
                  <input type="text" asp-for="marca" class="form-control"/>
                  <span asp-validation-for="marca" class="text-danger"></span>
             </div>

              <div class="form-group">
                  <label asp-for="categoria" class="control-label">Categoria</label>
                  <input type="text" asp-for="categoria" class="form-control"/>
                  <span asp-validation-for="categoria" class="text-danger"></span>
             </div>
              <div class="form-group">

                  @* <div class="form-group">
             <label asp-for="Classificacao_idade" class="control-label" >Classificação Idade</label>
             < <input type=" select class="form-control-file" id="Classificacao_idade">
        <option>Sim</option>
        <option>Não</option>
        </select> *@

                  <h6>Classificação de idade</h6>
                  @Html.DropDownListFor(model => model.Classificacao_idade, new SelectList(new string[] { "Sim", "Não" }, "Sim"), htmlAttributes: new { @class = "form-control" })



              </div>
        
              <div class="form-group">
             <input type="submit" value="Salvar" class="btn btn-primary" />   
              </div>
        </form>
   </div>   <!--Fim formulário -->






</div>


